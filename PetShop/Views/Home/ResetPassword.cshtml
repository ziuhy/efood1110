
@{
    ViewBag.Title = "重設密碼";
}

<style>
    /* 外層容器：讓卡片置中 */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    /* 卡片樣式 */
    .card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        width: 350px;
        min-height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* 錯誤訊息 */
    .alert-danger {
        background: #ffe6e6;
        color: #d8000c;
        padding: 8px;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        text-align: center;
    }

    /* 表單輸入框 */
    .form-control {
        width: 95%;
        padding: 10px;
        margin-bottom: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border 0.2s, box-shadow 0.2s;
    }

    .form-control:focus {
        border: 1px solid #4a90e2;
        box-shadow: 0 0 6px rgba(74,144,226,0.5);
        outline: none;
    }
</style>

<div class="container">
    <div class="card">
        <h2 style="text-align: center; color: #7c6e6e;">重設密碼</h2>

        @if (TempData["Note"] != null)
        {
            <div class="alert-danger">@TempData["Note"]</div>
        }

        @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
        {
            @Html.Hidden("token", (string)ViewBag.Token)

            @Html.Password("newPassword", null, new { placeholder = "新密碼", @class = "form-control" })
            <br />
            @Html.Password("confirmPassword", null, new { placeholder = "確認密碼", @class = "form-control" })
            <br />
            <input type="submit" value="確認重設" class="btn btn-primary" />
        }
    </div>
</div>
