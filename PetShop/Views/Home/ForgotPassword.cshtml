
@{
    ViewBag.Title = "忘記密碼";
}
<style>
    /* 外層容器：讓卡片置中 */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    /* 卡片樣式 */
    .card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        width: 350px;
        min-height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* 錯誤訊息 */
    .alert-danger {
        background: #ffe6e6;
        color: #d8000c;
        padding: 8px;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        text-align: center;
    }

    /* 表單輸入框 */
    .form-control {
        width: 95%;
        padding: 10px;
        margin-bottom: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border: 1px solid #7c6e6e;
            box-shadow: 0 0 6px rgba(74,144,226,0.5);
            outline: none;
        }

    .btn-link, .N {
        display: block;
        text-align: center;
        color: #565b5e;
        cursor: pointer;
        text-decoration: none;
        margin-top: 50px;
        text-align: left;
        margin-left: 0;
        width: fit-content;
    }

    .btn-link:hover, .N:hover {
        text-decoration: underline;
    }
</style>

<div class="container">
    <div class="card">
        <h2 style="text-align: center; color: #7c6e6e;">忘記密碼</h2>
        <p style="text-align: center;">請輸入您註冊的信箱，我們將寄送重設密碼連結</p>

        @if (TempData["Note"] != null)
        {
            <div class="alert-danger">@TempData["Note"]</div>
        }

        @using (Html.BeginForm("SendResetLink", "Home", FormMethod.Post))
        {
            @Html.TextBox("account", null, new { placeholder = "信箱", @class = "form-control" })
            <br />
            <input type="submit" value="寄送重設密碼連結" class="btn btn-primary" />
        }
        <button class="N" onclick="window.location.href='/Home/LoginRegister'">登入頁面</button>
    </div>
</div>