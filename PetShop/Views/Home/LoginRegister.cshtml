@using PetShop.Models
@model RegisterUser
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
@Scripts.Render("~/bundles/jqueryval")

<script>
    window.onload = function () {
        let CurrentDate = new Date();
        let CurrentTime = CurrentDate.getTime();
        let SaveTime = localStorage.getItem('SaveTime');
        if ((CurrentTime - SaveTime) > 10000) {
            localStorage.removeItem('Choice');
        }
        let Choice = localStorage.getItem('Choice');
        if ((Choice == null) || (Choice == "One")) {
            GoOne();
        } else {
            GoTwo();
        }
    };
    function GoTwo() {
        $("#Two").show();
        $("#One").hide();
        localStorage.setItem('Choice', 'Two');
        let CurrentDate = new Date();
        let CurrentTime = CurrentDate.getTime();
        localStorage.setItem('SaveTime', CurrentTime);
    }
    function GoOne() {
        $("#One").show();
        $("#Two").hide();
        localStorage.setItem('Choice', 'One');
        let CurrentDate = new Date();
        let CurrentTime = CurrentDate.getTime();
        localStorage.setItem('SaveTime', CurrentTime);
    }
    $(document).ready(function () {
        $("input, select, textarea").on("input change", function () {
            $(".alert-danger").fadeOut();
        });
        $("button, input[type=submit]").on("click", function () {
            $(".alert-danger").hide();
        });
    });
    function togglePwd() {
        const pwdInput = document.getElementById('regPwd');
        if (pwdInput.type === 'password') {
            pwdInput.type = 'text';
        } else {
            pwdInput.type = 'password';
        }
    }
</script>

<style>

    body {
        background: linear-gradient(rgba(249,249,249,0.7), rgba(233,239,245,0.7)), url('/Image/food2.png') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* 頁面標題 */
    .title-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 15vh;
    }

    .title-bar {
        background-color: #c2beba;
        color: #fff;
        padding: 12px;
        font-weight: bold;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 15px;
        width: 385px;
        font-size: calc(385px / 8);
        line-height: 1.2;
        white-space: nowrap;
    }

    /* 卡片外層容器 — 置中且可自動調整高度 */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1; /* 撐滿剩下空間 */
        padding: 20px;
        box-sizing: border-box;
    }

    /* 卡片樣式 */
    .card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* 錯誤訊息 */
    .alert-danger {
        background: #ffe6e6;
        color: #d8000c;
        padding: 8px;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        text-align: center;
    }

    /* 表單輸入框 */
    .form-control, .P {
        width: 100%;
        padding: 10px;
        margin-bottom: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border 0.2s, box-shadow 0.2s;
        box-sizing: border-box;
    }

        .form-control:focus, .P:focus {
            border: 1px solid #7c6e6e;
            box-shadow: 0 0 6px rgba(74,144,226,0.5);
            outline: none;
        }

    /* 按鈕樣式 */
    .btn-primary {
        background: #c2beba;
        border: none;
        padding: 10px;
        width: 100%;
        border-radius: 8px;
        color: white;
        font-size: 16px;
        margin-bottom: 10px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background: #737373;
        }

    /* 文字連結按鈕 */
    .btn-link, .N {
        display: block;
        text-align: center;
        color: #565b5e;
        cursor: pointer;
        text-decoration: none;
        margin-top: 5px;
    }

        .btn-link:hover, .N:hover {
            text-decoration: underline;
        }

    /* 預設隱藏註冊表單 */
    #Two {
        display: none;
    }
</style>

<div class="title-container">
    <div class="title-bar">
        今  天  吃  什  麼
    </div>
</div>

<div class="container">

    <div class="card">
        <!-- 登入 -->
        <div id="One">
            <h2 style="text-align: center; color: #565b5e; background-color: #f0eeec;">登入區</h2>
